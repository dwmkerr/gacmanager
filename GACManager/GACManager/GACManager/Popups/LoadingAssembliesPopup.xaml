<UserControl x:Class="GACManager.Popups.LoadingAssembliesPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:apexControls="clr-namespace:Apex.Controls;assembly=Apex" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Width="200" Height="200">
    <Grid>
        <Border 
            Background="White" BorderBrush="Gray" BorderThickness="1">
            <apexControls:ApexGrid HorizontalAlignment="Center" VerticalAlignment="Center" Rows="Auto,Auto">
                <TextBlock Grid.Row="0" Text="Loading Assembly Information..." />
                <apexControls:CircularProgressBar Grid.Row="1" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center">

                </apexControls:CircularProgressBar>
            </apexControls:ApexGrid>
        </Border>
    </Grid>
</UserControl>
